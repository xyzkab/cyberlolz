<% title "Tag" %>
<h1>Tags</h1>
<div class="tags">
  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
    <% @tags.each do |tag| %>
    <tr>
      <td><%= link_to(tag.name, tag_path(tag)) %></td>
      <td><%= tag.description %></td>
      <td><%= link_to "Edit", edit_tag_path(tag) %></td>
    </tr>
    <% end %>
  </table>
  <ul>
    <li><%= link_to "New", new_tag_path %></li>
  </ul>
</div>
