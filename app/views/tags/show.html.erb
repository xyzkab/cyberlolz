<% title "Tag" %>
<h1><%= @tag.name %></h1>
<div class="categories">
  <table>
    <tr>
      <th align="left">Name</th>
      <td><%= @tag.name %></td>
    </tr>
    <tr>
      <th align="left">Description</th>
      <td><%= @tag.description %></td>
    </tr>
    <tr>
      <td><%= link_to "Edit", edit_tag_path(@tag) %></td>
    </tr>
    <tr>
      <td><%= link_to "Back", tags_path %></td>
    </tr>
  </table>
</div>