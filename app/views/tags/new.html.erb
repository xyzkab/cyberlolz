<% title "Tag" %>
<h1>New Tag</h1>
<div class="tags">
  <%= form_for(@tag) do |f| %>
  <table>
    <tr>
      <th align="left">Name</th>
      <td><%= f.text_field :name, class: "form-control" %></td>
    </tr>
    <tr>
      <th align="left">Description</th>
      <td><%= f.text_area :description, size: "50x10", class: "form-control" %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= submit_tag("Create!") %></td>
    </tr>
  </table>
  <% end %>
  <ul>
    <li><%= link_to "Back", tags_path %></li>
  </ul>
</div>
