<% title "Tag" %>
<h1>Edit tag</h1>
<div class="categories">
  <%= form_for(@tag) do |f| %>
  <table>
    <tr>
      <th align="left">Name</th>
      <td><%= @tag.name %></td>
    </tr>
    <tr>
      <th align="left">Description</th>
      <td><%= f.text_field :description, class: "form-control" %></td>
    </tr>
    <tr>
      <td><%= link_to "Back", tag_path(@tag) %></td>
      <td><%= submit_tag("Update!") %></td>
    </tr>
  </table>
  <% end %>
</div>