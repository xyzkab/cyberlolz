<% title "Categories" %>
<h1>Categories</h1>
<div class="categories">
  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
    <% @categories.each do |category| %>
    <tr>
      <td><%= link_to(category.name, category_path(category)) %></td>
      <td><%= category.description %></td>
      <td><%= link_to "Edit", edit_category_path(category) %></td>
    </tr>
    <% end %>
  </table>
  <br/>
  <%= paginate(@categories) %>
  <ul>
    <li><%= link_to "New", new_category_path %></li>
    <li><%= link_to "Back", "javascript:history.back()" %></li>
  </ul>
</div>
