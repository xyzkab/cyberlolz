<% title "Posts" %>
<h1>Posts</h1>
<div class="posts">
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Status</th>
      <th></th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
      <td><%= title_to_link(post) %></td> <!-- TODO: must validate :url field for xss -->
      <td><%= post.description %></td>
      <td><%= post.category.name %></td>
      <td><%= post.status.name %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
    </tr>
    <% end %>
  </table>
</div>