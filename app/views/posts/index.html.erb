<% title "Posts" %>
<h1>Posts</h1>
<div class="posts">
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Url</th>
      <th>Status</th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
      <td><%= link_to(post.title, post.url, target: :_blank ) %></td> <!-- TODO: must validate :url field for xss -->
      <td><%= post.description %></td>
      <td><%= post.category.name %></td>
      <td><%= post.status.name%></td>
    </tr>
    <% end %>
  </table>
</div>